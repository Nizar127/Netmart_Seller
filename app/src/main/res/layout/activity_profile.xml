<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileFragment"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/sellerOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/changeSellerPic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:src="@drawable/ic_photo_black_24dp"
                    android:layout_margin="12dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/seller_name"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="Seller Name"
                            android:padding="15dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/montserrat"
                            />

                        <ImageView
                            android:id="@+id/sellerNameBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:src="@drawable/right_going" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/shop_status"
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Shop Status"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="15dp"
                        android:gravity="start"
                        android:textSize="20sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />


                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Toggle off to cut incoming order"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:gravity="start"
                        android:textSize="15sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="13dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />

                </LinearLayout>

             <Switch
                 android:id="@+id/shopstatusbtn"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:checked="true"
                 android:paddingRight="30dp"/>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreyBackground">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Support"

                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:text="Call Support"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    />

                <ImageView
                    android:id="@+id/callSupportBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/right_going" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Agrocore"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    />

                <ImageView
                    android:id="@+id/contactAgrocoreBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/right_going" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorGreyBackground">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Settings"

                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:fontFamily="@font/montserrat"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Business Hour"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="15dp"
                        android:gravity="start"
                        android:textSize="20sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />


                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Set Opening Hour and Closing Hour"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:gravity="start"
                        android:textSize="15sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />

                </LinearLayout>




                <ImageView
                    android:id="@+id/businesshourBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="end"

                    android:src="@drawable/right_going" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <LinearLayout
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Auto Print Receipt"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="15dp"
                        android:gravity="start"
                        android:textSize="20sp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />


                    <TextView
                        android:layout_width="286dp"
                        android:layout_height="wrap_content"
                        android:text="Print Receipt Upon Accepting Order"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:gravity="start"
                        android:textSize="15sp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/montserrat"
                        />

                </LinearLayout>

              <Switch
                  android:id="@+id/autoprintbtn"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:checked="true"
                  android:paddingRight="30dp"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:text="Bnak Account Information"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="18sp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    />

                <ImageView
                    android:id="@+id/bankacctBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/right_going" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="286dp"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:padding="15dp"
                    android:gravity="start"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/montserrat"
                    />

                <ImageView
                    android:id="@+id/logoutBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/right_going" />


            </LinearLayout>






        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomtabmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/GhostWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_tab">



    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>