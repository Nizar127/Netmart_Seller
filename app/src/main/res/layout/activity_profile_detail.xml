<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">


<!--                    <Button-->
<!--                        android:id="@+id/changeImageProfilePic"-->
<!--                        android:layout_width="200dp"-->
<!--                        android:layout_height="60dp"-->
<!--                        android:layout_gravity="end"-->
<!--                        android:background="@color/LimeGreen"-->
<!--                        android:fontFamily="@font/montserrat"-->
<!--                        android:gravity="center"-->
<!--                        android:text="Change Pic"-->
<!--                        android:textAlignment="center"-->
<!--                        android:textSize="20sp"-->
<!--                        android:textStyle="bold" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textAlignment="center"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                       >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <TextView
                                android:id="@+id/usernameprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:hint="Username :"
                                android:layout_gravity="center"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            >

                            <TextView
                                android:id="@+id/storenameprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:hint="Store Name"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <TextView
                                android:id="@+id/descriptionprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:hint="Description :"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <TextView
                                android:id="@+id/storelocationprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:hint="Store Location :"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <TextView
                                android:id="@+id/emailprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="20dp"
                                android:textStyle="bold"
                                android:hint="Email :"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">

                            <TextView
                                android:id="@+id/websiteprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:textSize="25sp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="20dp"
                                android:textStyle="bold"
                                android:hint="Website:"
                                android:layout_gravity="center"/>



                        </LinearLayout>



                    </LinearLayout>





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="50dp">

                    <Button
                        android:id="@+id/changeInfoProfile"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:background="@drawable/image_blue_border"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Edit Profile"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textColor="@color/GhostWhite"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>




        </ScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>