<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_product_details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/candyapple">

                <ImageView
                    android:id="@+id/back_btn_product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow_back_white_50dp" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to Cart"
                    android:textColor="@color/splashname"
                    android:fontFamily="@font/montserrat"
                    android:textSize="25sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/toolbar_product_details">

                <ImageView
                    android:id="@+id/productImgView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/fooddelivery" />

                <LinearLayout
                    android:id="@+id/productDescLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="40sp"
                        android:text="Product Name"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/categoryDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:fontFamily="@font/artifika"
                            android:textSize="20sp"
                            android:textColor="@color/DarkGreen"
                            android:textStyle="bold"
                            android:background="@drawable/image_grey_border"
                            android:padding="20dp"
                            android:layout_margin="5dp"/>

                        <TextView
                            android:id="@+id/productDetailPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="$ 15.00"
                            android:fontFamily="@font/montserrat"
                            android:gravity="end"
                            android:textSize="25sp"
                            android:textColor="@color/Black"
                            android:textStyle="bold"
                            android:padding="20dp"
                            android:layout_marginLeft="55dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/productDetailDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Description"
                            android:textSize="20sp"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_above="@+id/layoutDesc"
                    />


                <LinearLayout
                    android:id="@+id/availLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="30sp"
                            android:text="Available"
                            android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/qtyDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_marginLeft="50dp"/>


                </LinearLayout>


                <View
                    android:id="@+id/qtyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/productDetailDesc"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Image Gallery"
                        android:textSize="30sp"
                        android:padding="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:id="@+id/imgGallery1"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            android:src="@drawable/welcome" />

                        <ImageView
                            android:id="@+id/imgGallery2"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            android:src="@drawable/welcome" />

                        <ImageView
                            android:id="@+id/imgGallery3"
                            android:layout_width="130dp"
                            android:layout_height="120dp"
                            android:src="@drawable/welcome" />



                    </LinearLayout>

                    <ImageView
                        android:id="@+id/addImg"
                        android:layout_width="130dp"
                        android:layout_height="120dp"
                        android:src="@drawable/addcircle"
                        android:background="@color/colorGreyBackground"/>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/editProductDetail"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:text="Edit"
                        android:background="@color/Blue"
                        android:textStyle="bold"
                        android:fontFamily="@font/artifika"
                        android:padding="5dp"
                        android:textColor="@color/GhostWhite"
                        />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>